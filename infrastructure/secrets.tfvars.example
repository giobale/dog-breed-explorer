# ==============================================================================
# SECRETS CONFIGURATION EXAMPLE
# ==============================================================================
# Copy this file to secrets.tfvars and fill in actual values
# NEVER commit secrets.tfvars to Git!

# Path to service account JSON key file (relative to infrastructure directory)
# Example: "../pyne-de-assignemet-tf-service-account-key.json"
service_account_key_path = "../path-to-your-service-account-key.json"

# Dog API configuration (optional, defaults are provided)
dog_api_base_url = "https://api.thedogapi.com/v1"
dog_api_endpoint = "breeds"

# GitHub Actions service account email (created separately)
github_actions_service_account_email = "github-actions@your-project-id.iam.gserviceaccount.com"

# DLT Cloud Run Job configuration - Not really secrets but we will use the secrets.tfvars as our variables file in our Terraform set up
dlt_service_account_email = "terraform-deploy@pyne-de-assignemet.iam.gserviceaccount.com"
dlt_container_image       = "europe-west1-docker.pkg.dev/pyne-de-assignemet/cicd-push-repository/dlt-dog-breeds:latest"
dlt_schedule              = "0 9 * * 1"  # Every Monday at 9 AM UTC